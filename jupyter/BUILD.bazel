load("@bazel_skylib//:bzl_library.bzl", "bzl_library")

exports_files([
    "defs.bzl",
    "extensions.bzl",
    "jupyter_notebook_test.bzl",
    "jupyter_notebook.bzl",
    "jupyter_report.bzl",
    "jupyter_toolchain.bzl",
    "requirements.in",
])

toolchain_type(
    name = "toolchain_type",
    visibility = ["//visibility:public"],
)

