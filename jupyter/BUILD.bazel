    name = "defs_bzl",
    srcs = ["defs.bzl"],
    visibility = ["//visibility:public"],
    deps = [
        "//jupyter:jupyter_notebook_bzl",
        "//jupyter:jupyter_notebook_test_bzl",
        "//jupyter:jupyter_report_bzl",
        "//jupyter:jupyter_toolchain_bzl",
    ],
)

bzl_library(
    name = "jupyter_notebook_bzl",
    srcs = ["jupyter_notebook.bzl"],
    visibility = ["//visibility:public"],
    deps = [
        "//jupyter/private:bzl_lib",
    ],
)

bzl_library(
    name = "jupyter_notebook_test_bzl",
    srcs = ["jupyter_notebook_test.bzl"],
    visibility = ["//visibility:public"],
    deps = [
        "//jupyter/private:bzl_lib",
    ],
)

bzl_library(
    name = "jupyter_report_bzl",
    srcs = ["jupyter_report.bzl"],
    visibility = ["//visibility:public"],
    deps = [
        "//jupyter/private:bzl_lib",
    ],
)

bzl_library(
    name = "jupyter_toolchain_bzl",
    srcs = ["jupyter_toolchain.bzl"],
    visibility = ["//visibility:public"],
    deps = [
        "//jupyter/private:bzl_lib",
    ],
)
